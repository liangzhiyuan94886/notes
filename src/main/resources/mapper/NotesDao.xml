<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.learn.notes.dao.NotesDao">
    <!--查询tag-->
    <select id="getAllTags" resultType="com.learn.notes.entity.Tag">
        SELECT * FROM tag
    </select>
    <!--查询所有notes-->
    <select id="getALLNotes" resultType="com.learn.notes.entity.Notes">
        SELECT
            n.id,
            n.keyword,
            n.content,
            t.tagName
        FROM
            notes n,
            tag t
        WHERE
            n.nid = t.tid
    </select>
    <!--update描述内容-->
    <select id="updateContent" parameterType="com.learn.notes.entity.Notes">
        UPDATE notes SET content = #{content} WHERE id = #{id}
    </select>
    <!--update关键词-->
    <select id="updateKeyword" parameterType="com.learn.notes.entity.Notes">
        UPDATE notes SET keyword = #{keyword} WHERE id = #{id}
    </select>
    <!--新增-->
    <select id="addNote" parameterType="com.learn.notes.entity.Notes">
        INSERT INTO notes (nid,keyword,content) VALUES(#{nid},#{keyword},#{content})
    </select>

    <!--新增标签-->
    <select id="addTag" parameterType="com.learn.notes.entity.Tag">
        INSERT INTO tag (tid,tagName) VALUES(#{tid},#{tagName})
    </select>

    <!--模糊查询匹配-->
    <select id="searchNotes" resultType="com.learn.notes.entity.Notes">
        SELECT
            n.id,
            n.keyword,
            n.content,
            t.tagName
        FROM
            notes n,
            tag t
        WHERE
            n.nid = t.tid
            AND (content LIKE concat ('%',#{search},'%') OR keyword LIKE concat ('%',#{search},'%'))
    </select>
</mapper>